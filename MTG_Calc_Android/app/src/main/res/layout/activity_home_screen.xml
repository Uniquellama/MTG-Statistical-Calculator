<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.mypackage.max.mtg_calc_android.HomeScreen">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="How many cards of each type?"
            android:id="@+id/questionTextView"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/amountLand"
            android:layout_marginTop="38dp" android:text="Land" android:layout_below="@+id/questionTextView"
            android:layout_alignParentStart="true"/>

    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
              android:ems="10" android:id="@+id/amountCreatures" android:text="Creatures"
              android:layout_below="@+id/amountLand" android:layout_alignParentStart="true"/>

    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
              android:ems="10" android:id="@+id/amountInstants" android:text="Instants"
              android:layout_below="@+id/amountCreatures" android:layout_alignParentStart="true"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
              android:ems="10" android:id="@+id/amountSorceries" android:text="Sorceries"
              android:layout_below="@+id/amountInstants" android:layout_alignParentStart="true"
              android:layout_alignParentEnd="false" android:allowUndo="false" android:elegantTextHeight="false"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
              android:ems="10" android:id="@+id/amountEnchantments" android:text="Enchantments"
              android:layout_below="@+id/amountSorceries" android:layout_alignParentStart="true"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
              android:ems="10" android:id="@+id/amountArtifacts" android:text="Artifacts"
              android:layout_below="@+id/amountEnchantments" android:layout_alignParentStart="true"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
              android:ems="10" android:id="@+id/amountPlaneswalkers" android:text="Planeswalkers"
              android:layout_below="@+id/amountArtifacts" android:layout_alignParentStart="true"/>

</RelativeLayout>
